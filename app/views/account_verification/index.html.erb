<p id="notice"><%= notice %></p>

<h1>Account Verification Documents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_verification_documents.each do |account_verification_document| %>
      <tr>
        <td><%= account_verification_document.title %></td>
        <td><%= account_verification_document.file_data %></td>
        <td><%= link_to 'Show', account_verification_document %></td>
        <td><%= link_to 'Edit', edit_account_verification_document_path(account_verification_document) %></td>
        <td><%= link_to 'Destroy', account_verification_document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

